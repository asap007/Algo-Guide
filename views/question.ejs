<!DOCTYPE html>
<html lang="en" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= question.title %> - LeetCode Helper
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/theme/dracula.min.css">
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: '#6366f1',
                        secondary: '#10b981',
                    },
                },
            },
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
        }

        .button-30 {
            align-items: center;
            appearance: none;
            background-color: #ffffff;
            /* Red background */
            border-radius: 4px;
            border-width: 0;
            box-shadow: rgba(45, 35, 66, 0.4) 0 2px 4px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
            box-sizing: border-box;
            color: #000000;
            /* White text */
            cursor: pointer;
            display: inline-flex;
            font-family: "JetBrains Mono", monospace;
            height: 48px;
            justify-content: center;
            line-height: 1;
            overflow: hidden;
            padding-left: 16px;
            padding-right: 16px;
            position: relative;
            text-align: left;
            text-decoration: none;
            transition: box-shadow .15s, transform .15s;
            user-select: none;
            font-size: 18px;
        }

        .button-30:focus {
            box-shadow: #D6D6E7 0 0 0 1.5px inset, rgba(45, 35, 66, 0.4) 0 2px 4px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
        }

        .button-30:hover {
            box-shadow: rgba(45, 35, 66, 0.4) 0 4px 8px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
            transform: translateY(-2px);
        }

        .button-30:active {
            box-shadow: #D6D6E7 0 3px 7px inset;
            transform: translateY(2px);
        }
        .button-31 {
            align-items: center;
            appearance: none;
            background-color: #6B21A8;
            /* Red background */
            border-radius: 4px;
            border-width: 0;
            box-shadow: rgba(45, 35, 66, 0.4) 0 2px 4px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
            box-sizing: border-box;
            color: #ffffff;
            /* White text */
            cursor: pointer;
            display: inline-flex;
            font-family: "JetBrains Mono", monospace;
            height: 48px;
            justify-content: center;
            line-height: 1;
            overflow: hidden;
            padding-left: 49px;
            padding-right: 49px;
            position: relative;
            text-align: left;
            text-decoration: none;
            transition: box-shadow .15s, transform .15s;
            user-select: none;
            font-size: 28px;
        }

        .button-31:focus {
            box-shadow: #D6D6E7 0 0 0 1.5px inset, rgba(45, 35, 66, 0.4) 0 2px 4px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
        }

        .button-31:hover {
            box-shadow: rgba(45, 35, 66, 0.4) 0 4px 8px, rgba(45, 35, 66, 0.3) 0 7px 13px -3px, #D6D6E7 0 -3px 0 inset;
            transform: translateY(-2px);
        }

        .button-31:active {
            box-shadow: #D6D6E7 0 3px 7px inset;
            transform: translateY(2px);
        }

        ::selection {
            color: white;
        }

    </style>
</head>

<body class="bg-gradient-to-r from-[#e2e8f0] to-[#f8fafc] text-gray-900 font-sans min-h-screen">
    <!-- Horizontal Navigation -->
    <header class="w-full p-6">
        <div class="container mx-auto flex justify-between items-center">
            <!-- Left Section for Logo -->
            <h2 class="text-3xl font-bold">LOGO</h2>

            <!-- Right Section for Logout Button -->
            <nav class="flex items-center space-x-8">
                <a class="button-30" role="button" href="/auth/logout">Logout</a>
            </nav>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="p-3"> <!-- Reduced padding -->
        <!-- Welcome Message -->
        <section class="mb-6 mt-[-50px] text-center"> <!-- Reduced margin -->
            <h1 class="text-6xl font-bold mb-4 text-purple-800">Welcome Back, <span class="text-pink-600">Coder!</span>
            </h1>
            <p class="text-lg">You have 3 tasks to complete today. Keep going, you are almost there!</p>
        </section>

        <!-- Code Editor Section -->
        <section class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Code Editor -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-2xl font-semibold">Code Editor</h2>
                    <select id="languageSelect" class="bg-gray-100 text-gray-700 p-2 rounded-md border border-gray-300">
                        <option value="java" selected>Java</option>
                        <option value="python">Python</option>
                        <option value="cpp">C++</option>
                        <option value="javascript">JavaScript</option>
                    </select>
                </div>
                <!-- Increased height for the code editor box -->
                <div id="codeEditor" class="w-full h-[330px] bg-gray-100 rounded-md p-4 mb-4"></div>

                <!-- Demo Input Section -->
                <div>
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Error Input</h3>
                    <textarea class="w-full h-64 bg-gray-100 p-3 rounded-md"
                        placeholder="Paste your error here..."></textarea>
                </div>
            </div>

            <!-- Input & Output Section -->
            <div class="grid gap-6">
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h3 class="text-lg font-semibold text-gray-800">Input</h3>
                    <textarea class="w-full h-36 bg-gray-100 p-3 rounded-md"></textarea>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h3 class="text-lg font-semibold text-gray-800">Expected Output</h3>
                    <textarea class="w-full h-36 bg-gray-100 p-3 rounded-md"></textarea>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h3 class="text-lg font-semibold text-gray-800">Your Output</h3>
                    <textarea class="w-full h-36 bg-gray-100 p-3 rounded-md"></textarea>
                </div>
            </div>
        </section>

        <!-- Analyze Button Section -->
         <form action="/handle-output">
            <section class="mt-8 text-center">
                <button
                    class="button-31">
                    Analyze
                </button>
                        </section>
         </form>
        
    </main>
    

    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/javascript/javascript.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/python/python.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/clike/clike.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/xml/xml.min.js"></script>

    <script>
        const boilerplates = {
            python: `def main():\n    # Your code here\n    pass\n\nif __name__ == "__main__":\n    main()\n`,
            java: `public class Main {\n    public static void main(String[] args) {\n        // Your code here\n    }\n}\n`,
            cpp: `#include <iostream>\nusing namespace std;\n\nint main() {\n    // Your code here\n    return 0;\n}\n`,
            javascript: `function main() {\n    // Your code here\n}\n\nmain();\n`
        };

        const codeMirrorEditor = CodeMirror(document.getElementById('codeEditor'), {
            mode: 'text/x-java',
            theme: 'dracula',
            lineNumbers: true,
            autoCloseBrackets: true,
            matchBrackets: true,
            indentUnit: 4,
            tabSize: 4,
            indentWithTabs: true,
            lineWrapping: true,
        });

        codeMirrorEditor.setValue(boilerplates['java']);

        document.getElementById('languageSelect').addEventListener('change', function () {
            const selectedLanguage = this.value;
            let mode;
            switch (selectedLanguage) {
                case 'python':
                    mode = 'python';
                    break;
                case 'java':
                    mode = 'text/x-java';
                    break;
                case 'cpp':
                    mode = 'text/x-c++src';
                    break;
                case 'javascript':
                    mode = 'javascript';
                    break;
            }
            codeMirrorEditor.setOption('mode', mode);
            codeMirrorEditor.setValue(boilerplates[selectedLanguage]);
        });

        document.getElementById('analyzeBtn').addEventListener('click', async () => {
        
        });


        const imgContainer = document.querySelector(".img-container img");
        const logoutBtn = document.querySelector(".logout-btn");

        logoutBtn.addEventListener("mouseenter", () => {
            imgContainer.style.transform = "translateY(-32px)"; // Adjust the value for the desired movement
        });

        logoutBtn.addEventListener("mouseleave", () => {
            imgContainer.style.transform = "translateY(0)"; // Reset to the original position
        });
    </script>
</body>

</html>