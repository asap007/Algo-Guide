<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8 text-center text-blue-600">Algo Guide</h1>
        <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl">
            <div class="p-8">
                <form id="questionForm" class="space-y-6">
                    <div>
                        <label for="question" class="block text-sm font-medium text-gray-700">Enter LeetCode Question:</label>
                        <input type="text" id="question" name="question" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div>
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Start Session
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('questionForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const question = document.getElementById('question').value;
            try {
                const response = await fetch('/start-session', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ question }),
                });
                const data = await response.json();
                console.log('Data:', data);
                
                // Redirect to question page with the received data
                if (data.assessmentQuestions) {
                    const encodedQuestions = encodeURIComponent(JSON.stringify(data.assessmentQuestions));
                    window.location.href = `/question/${question}?assessmentQuestions=${encodedQuestions}`;
                } else {
                    console.error('No assessment questions received');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        });
    </script>
</body>
</html>